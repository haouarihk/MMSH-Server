{
    "name": "compiler Handler",
    "requirer": "converter-toless-plugin",
    "routerConfig": {
        "pages": {
            "main": {
                "name": "main",
                "dir": "main"
            },
            "message": {
                "name": "message",
                "dir": "message"
            }
        },
        "paths": {
            "main": "",
            "inputdir": "./input",
            "outputdir": "./output"
        }
    },
    "config": {
        "debug": false,
        "logInFile": true,
        "timetoGarbageCleaner": 240,
        "deleteallTempFilesOnStart": true,
        "filesizeLimitsMB": 100,
        "randomStringSize": 8,
        "compilers": [
            {
                "name": "Docx to Latex",
                "commander": "",
                "CompilerPath": "./compilers/docx2tex/d2t",
                "command": "-o \"#{oPath}\" \"#{iPath.type}\"",
                "whitelistInputs": [
                    "Docx"
                ]
            }
        ],

        "filter":{
            "enabled": true,

            "words": [
                "fuck", "shit", "Swear", "www", "https", "http", "*", ">"
            ],
        
            "filterWords": true,
        
            "filterComas": true,
        
            "filterSlashes": true,
        
            "filterUsingDecoder": true,

            "replaceBy": "u"
        }
    }
}